<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Rz\TutorialBundle\Entity\TutorialUserProgress">
        <field name="accomplished" type="boolean" column="accomplished" default="false" nullable="true" />
        <field name="started" column="started" type="datetime" nullable="true"/>
        <field name="ended" column="ended" type="datetime" nullable="true"/>
        <field name="elapseTime" column="elapse_time" type="string" length="10" nullable="true"/>
        <field name="createdAt" column="created_at" type="datetime"/>
        <field name="updatedAt" column="updated_at" type="datetime"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

    </mapped-superclass>
</doctrine-mapping>
