{% if admin.hasRoute('edit') and admin.isGranted('EDIT') %}
    <div class="row-fluid sepH_c">
        <div class="span12">
            <img id="{{ admin.form.name }}_media_screen_image" src="{% path object, 'reference' %}" class="tutorial-screen-image" style="width: {{ object.width }}px; height: {{ object.height }}px">
        </div>
    </div>

    <div class="row-fluid sepH_c">
        <div class="span12">
            {#<a href="{{ admin.generateObjectUrl('edit', object) }}" target="new">{{ description }}</a>#}
            <div class="sonata-actions btn-group">
                <a href="#" class="btn sonata-action-element tutorial-media-draw-coordinates"><i class="micon-plus"></i></a>
                <a href="#" class="btn sonata-action-element tutorial-media-add-coordinates"><i class="icon-save"></i></a>
                <a href="#" class="btn sonata-action-element tutorial-media-save-edit-coordinates"><i class="micon-enter"></i></a>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <table class="table table-bordered table-striped table-hover tutorial-media-collection">
                <thead>
                <tr>
                    <th>X1</th>
                    <th>Y1</th>
                    <th>X2</th>
                    <th>Y2</th>
                    <th>Type</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% if link_coordinates %}
                    {% set count = 0 %}
                    {% for link_coordinate in link_coordinates %}
                        {% render url('rz_tutorial_append_link_coordinates',{
                            'uniqid': count,
                            'x1': link_coordinate.x1,
                            'y1': link_coordinate.y1,
                            'x2': link_coordinate.x2,
                            'y2': link_coordinate.y2,
                            'type': link_coordinate.type,
                            'parentId': parentId
                            })
                        %}
                        {% set count = count + 1 %}
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6">No Data</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% else %}
    <div class="row-fluid">
        <div class="span12">
            <img id="{{ admin.form.name }}_media_screen_image" src="{% path object, 'reference' %}" class="tutorial-screen-image">
        </div>
    </div>
{% endif %}

