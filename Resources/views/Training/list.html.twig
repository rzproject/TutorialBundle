<ul class="training-list">
    {% for training in pager.getCurrentPageResults() %}
        <li><a href="{{ path('rz_tutorial_list_training_tutorials', {'slug':training.slug}) }}">{{ training.title }}</a>
            {% if training.description is defined %}
            <div class="training-list-description">
                 {{ training.description | raw}}
            </div>
            {% endif %}
        </li>
    {% endfor %}
</ul>

<div class="row-fluid">
    <div class="span12">
        {% if pager.haveToPaginate() %}
            {% if pager.hasPreviousPage %}
                <a class="btn btn-success pull-left" href="{{ path('rz_tutorial_list_training_pager', {'page':pager.previousPage}) }}" title="{{ 'link_previous_page'|trans({}, 'RzTutorialBundle-Training') }}">{{ 'link_previous_page'|trans({}, 'RzTutorialBundle-Training') }}</a>
            {% endif %}

            {% if pager.hasNextPage %}
                <a class="btn btn-success pull-right" href="{{ path('rz_tutorial_list_training_pager', {'page':pager.nextPage}) }}" title="{{ 'link_next_page'|trans({}, 'RzTutorialBundle-Training') }}">{{ 'link_next_page'|trans({}, 'RzTutorialBundle-Training') }}</a>
            {% endif %}
        {% endif %}
    </div>
</div>
